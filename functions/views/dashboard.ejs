          var email = error.email;
          // The firebase.auth.AuthCredential type that was used.
          var credential = error.credential;
          // ...
        });
    }

    function logout() {
      firebase.analytics().logEvent('logout');
      fetch("./logout", {
        method: "GET",
      })
      .then(response => {
        window.location.href = "./";
      });
      sessionStorage.setItem("_session", "");
    }
